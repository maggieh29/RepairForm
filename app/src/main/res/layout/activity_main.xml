<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nameInput"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BCC4F3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/totalNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:text="$0.00"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/total_tv"
        app:layout_constraintTop_toBottomOf="@+id/taxNum" />

    <TextView
        android:id="@+id/topTitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Repair Form"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="336dp"
        android:text="Submit"
        android:textColorHighlight="#FFCFCF"
        android:textColorLink="#CD6464"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.212"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/technicianInput" />

    <TextView
        android:id="@+id/technician_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="Technician"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/orderType_tv"
        app:layout_constraintTop_toBottomOf="@+id/orderType_tv" />

    <TextView
        android:id="@+id/inspection_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="Inspection"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/technician_tv"
        app:layout_constraintTop_toBottomOf="@+id/technician_tv" />

    <TextView
        android:id="@+id/paint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="Paint"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/inspection_tv"
        app:layout_constraintTop_toBottomOf="@+id/inspection_tv" />

    <TextView
        android:id="@+id/parts_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="Parts"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/paint_tv"
        app:layout_constraintTop_toBottomOf="@+id/paint_tv" />

    <TextView
        android:id="@+id/labor_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="Labor"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/parts_tv"
        app:layout_constraintTop_toBottomOf="@+id/parts_tv" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topTitle_tv" />

    <TextView
        android:id="@+id/subtotal_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="239dp"
        android:layout_marginTop="314dp"
        android:text="Subtotal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/technicianInput" />

    <TextView
        android:id="@+id/tax_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="239dp"
        android:layout_marginTop="16dp"
        android:text="Tax"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtotal_tv" />

    <TextView
        android:id="@+id/total_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="239dp"
        android:layout_marginTop="16dp"
        android:text="Total"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tax_tv" />

    <TextView
        android:id="@+id/taxNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:text="$0.00"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/tax_tv"
        app:layout_constraintTop_toBottomOf="@+id/subtotalNum" />

    <TextView
        android:id="@+id/subtotalNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="314dp"
        android:text="$0.00"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/subtotal_tv"
        app:layout_constraintTop_toBottomOf="@+id/technicianInput" />

    <EditText
        android:id="@+id/partsInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#E4D5FF"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/paintInput"
        app:layout_constraintTop_toBottomOf="@+id/paintInput" />

    <EditText
        android:id="@+id/inspectionInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#E4D5FF"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/technicianInput"
        app:layout_constraintTop_toBottomOf="@+id/technicianInput" />

    <EditText
        android:id="@+id/technicianInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#E4D5FF"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/orderInput"
        app:layout_constraintTop_toBottomOf="@+id/orderInput" />

    <EditText
        android:id="@+id/orderInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="21dp"
        android:backgroundTint="#E4D5FF"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/orderType_tv"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/orderType_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="140dp"
        android:text="Order Type"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/paintInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#E4D5FF"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/inspectionInput"
        app:layout_constraintTop_toBottomOf="@+id/inspectionInput" />

    <EditText
        android:id="@+id/laborInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#E4D5FF"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/partsInput"
        app:layout_constraintTop_toBottomOf="@+id/partsInput" />

</androidx.constraintlayout.widget.ConstraintLayout>